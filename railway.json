{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {"commands": []},
        "install": {
          "commands": [
            "pip install -r requirements.txt",
            "npm ci"
          ]
        },
        "build": {
          "commands": [
            "npm run build"
          ]
        },
        "start": {
          "commands": [
            "python backend/run_backend.py"
          ]
        }
      }
    }
  }
}

